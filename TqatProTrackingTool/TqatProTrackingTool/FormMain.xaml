<Controls:MetroWindow
        x:Class="TqatProTrackingTool.FormMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    
        xmlns:viewModel="clr-namespace:TqatProViewModel;assembly=TqatProViewModel"
        
        Title="FormMain" Height="600" Width="400"
        GlowBrush="{DynamicResource AccentColorBrush}"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinWidth="1024"
        MinHeight="600"
    
        Loaded="MetroWindow_Loaded"
        ShowIconOnTitleBar ="True"
      
        ShowMinButton="False"
        ShowMaxRestoreButton="False"
     
        WindowButtonCommandsOverlayBehavior="Always"
       
    >
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Trackers" Click="formCommandTrackers_Click"/>


        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>


    <Window.Resources>
        <Style x:Key="StyleRibbonMenuButtonUser" TargetType="RibbonMenuItem">
            <Setter Property="ImageSource" Value="Resources/images/128/Animated/user_02.png"></Setter>
            <Setter Property="Header" Value="{Binding Username}"></Setter>
            <Setter Property="DataContext" Value="{Binding UserItem}"></Setter>
            <EventSetter Event="Click" Handler="StyleRibbonMenuButtonUser_Click"></EventSetter>
        </Style>
        <Style x:Key="StyleRibbonComboBoxDisplay" TargetType="RibbonMenuItem">
            <Setter Property="ImageSource" Value="Resources/images/128/Animated/user_02.png"></Setter>
            <EventSetter Event="Click" Handler="StyleRibbonMenuButtonUser_Click"></EventSetter>
        </Style>

    </Window.Resources>


    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <Ribbon Grid.Column="0" Grid.Row="0">
            <RibbonTab Header="Trackers">
                <RibbonGroup Header="User">
                    <RibbonMenuButton x:Name="RibbonMenuButtonUser" LargeImageSource="Resources/images/128/Animated/user_00.png" Label="User" ItemContainerStyle="{StaticResource StyleRibbonMenuButtonUser}"/>
                </RibbonGroup>
                <RibbonGroup Header="Display">
                    <RibbonMenuButton  x:Name="ribbonMenuButtonDisplayMember" LargeImageSource="Resources/images/128/Animated/monitor_01.png" Label="Vehicle Registration" ItemContainerStyle="{StaticResource StyleRibbonMenuButtonUser}">
                        <RibbonGallery x:Name="ribbonGalleryComboBoxDisplayMember" SelectedValue="VehicleRegistration"
                              SelectedValuePath="Content"
                              MaxColumnCount="1" SelectionChanged="RibbonComboBoxDisplayMember_SelectionChanged">
                            <RibbonGalleryCategory>
                                <RibbonGalleryItem Content="VehicleRegistration"/>
                                <RibbonGalleryItem Content="DriverName" />
                                <RibbonGalleryItem Content="VehicleModel" />
                            </RibbonGalleryCategory>
                        </RibbonGallery>
                    </RibbonMenuButton>

                </RibbonGroup>
                <RibbonGroup Header="Trackers">
                    <RibbonButton x:Name="ribbonButtonTrackers" LargeImageSource="Resources/images/128/Animated/car_00.png" Label="Show Trackers" Click="ribbonButtonTrackers_Click"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MaxWidth="200"/>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="*"/>-->
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="gridTrackers" Width="0">
                <GroupBox Header="Trackers" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ListView x:Name="listViewTrackers" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2"/>
                </GroupBox>
            </Grid>
            <!--<GridSplitter Grid.Column="1" Style="{StaticResource VerticalGridSplitter}" Margin="0"></GridSplitter>-->

            

            <WebBrowser Grid.Column="2" x:Name="webBrowserMap"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="-100"/>
        </Grid>
    </Grid>

